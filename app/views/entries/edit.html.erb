<% content_for :title, "Edit Journal Entry: #{@entry.entry_date.strftime('%A, %B %d, %Y')}" %>

<div class="container mx-auto px-4 py-8 max-w-3xl">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-3xl text-gray-800">Edit Journal Entry</h1>
    <div class="flex space-x-2">
      <%= link_to "Show this entry", @entry, class: "rounded-md px-3 py-1.5 text-sm font-medium bg-white text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      <%= link_to "Back to entries", entries_path, class: "rounded-md px-3 py-1.5 text-sm font-medium bg-white text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg p-6">
    <%= render "form", entry: @entry %>
  </div>
</div>
